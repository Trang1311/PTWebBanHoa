@model WebBanHoa.Models.SANPHAM

@{
    ViewBag.Title = "Chitietsanpham";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<section style="background-color: #eee;">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card text-black">
                    <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
                    <img src="/img/sp/@Model.HinhMinhHoa"
                         class="card-img-top" alt="@Model.TenSP" />
                    <div class="card-body">
                        <div class="text-center">
                            <h5 class="card-title">@Model.TenSP</h5>
                            <p class="text-muted mb-4">Lượt Xem:@Model.SoLanXem</p>
                        </div>
                        <div>
                            <div class="d-flex justify-content-between">
                                <div class="motasach">
                                    <p>@Html.Raw(Model.MoTa.ToString().Replace("/n", "</p><p>"))</p>
                                </div>
                            </div>

                        </div>
                        <div class="d-flex justify-content-between total font-weight-bold mt-4">
                            <p style="font:italic;color:cornflowerblue"> Ngày cập nhật: @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}")</p>
                            <p style="font:bold; color:darkred"> Giá bán : <span>@Html.FormatValue(@Model.DonGia, "{0:#,##0,0}")VNĐ</span></p>
                        </div>
                        <div>
                            <a href="@Url.Action("Edit","SanPham", new { id = Model.MaSP })" class="btn btn-warning btn-block btn-lg" role="button">Sửa</a>
                            <a href="@Url.Action("Delete","SanPham", new { id = Model.MaSP })" class="btn btn-danger btn-block btn-lg" role="button">Xóa</a>

                        </div>
                        <div class="text-center">
                          
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
