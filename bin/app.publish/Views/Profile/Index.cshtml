@using WebBanHoa.Models
@{

    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout_1.cshtml";
}
@{ 
    KHACHHANG kh = (KHACHHANG)Session["Taikhoan"];
}
<style type="text/css" >
    .gradient-custom {
        /* fallback for old browsers */
        background: #f6d365;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
    }
</style>


<section class="vh-80" style="background-color: #f4f5f7;"><br />
    <br />
    <h3 style="text-align:center">THÔNG TIN CÁ NHÂN</h3>
    <div class="container py-5 h-80">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col col-lg-7 mb-6 mb-lg-4">
                <div class="card mb-1" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                          
                                <img src="/img/kh/@kh.HinhAnh"
                                 alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                            <h5>@kh.TenDN</h5>
                           
                            
                           
                            <i class="far fa-edit mb-5"></i>
                        </div>
                        <div class="col-md-5">
                            <div class="card-body p-4">

                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h5>Họ Tên:</h5>
                                        <p class="text-muted">@kh.HoTenKH</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h5>Ngày Sinh: </h5>
                                        <p class="text-muted">@Html.FormatValue(kh.NgaySinh, "{0:dd/MM/yyyy}")</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h5>SĐT: </h5>
                                        <p class="text-muted">@kh.DienThoaiKH</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h5>Email</h5>
                                        <p class="text-muted">@kh.Email</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h5>Địa Chỉ</h5>
                                        <p class="text-muted">@kh.DiaChiKH</p>
                                    </div>

                                </div>

                            </div>
                            <a href="@Url.Action("DangXuat", "User")" class="btn btn-warning" role="button">ĐĂNG XUẤT</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div> 
    <div style="margin-left: 500px"><img src="/img/sp/valentine_love_relationships_valentines_heart_flower_to_water_icon_179597.png" /></div>
</section>
