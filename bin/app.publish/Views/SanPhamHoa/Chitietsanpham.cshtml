@model WebBanHoa.Models.SANPHAM

@{
    ViewBag.Title = "Chitietsanpham";
    Layout = "~/Views/Shared/_Layout_1.cshtml";
}

<style type="text/css">
    .checked {
        color: orange;
    }
</style>
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card text-black">
                    <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
                    <img src="~/img/sp/@Model.HinhMinhHoa"
                         class="card-img-top" alt="@Model.TenSP" />
                    <div class="card-body">
                        <div class="text-center">
                            <h5 class="card-title">@Model.TenSP</h5>
                            <p class="text-muted mb-4">Lượt Xem:@Model.SoLanXem</p>
                        </div>
                        <div>
                            <div class="d-flex justify-content-between">
                                <div class="motasach">
                                    <p>@Html.Raw(Model.MoTa.ToString().Replace("/n", "</p><p>"))</p>
                                </div>
                            </div>

                        </div>
                        <div class="d-flex justify-content-between total font-weight-bold mt-4">
                            <p style="font:italic;color:cornflowerblue"> Ngày cập nhật: @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}")</p>
                            <p style="font:bold; color:darkred"> Giá bán : <span>@Html.FormatValue(@Model.DonGia, "{0:#,##0,0}")VNĐ</span></p>
                        </div>
                        <div>
                            Đánh Gía: 
                            <!-- Add icon library -->
                            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                        </div>
                        <div class="text-center">
                            <p class="addtocart">
                                <a href="@Url.Action("ThemGioHang","GioHang",new { ms = Model.MaSP, url = Request.Url.ToString() })" class="btn btn-primary" role="button">
                                    <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                                    Thêm vào giỏ hàng
                                </a>

                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
