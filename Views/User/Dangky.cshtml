
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Dangky</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Views/User/Login.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"></script>
    
</head>
<body style="color:cornflowerblue">
    <div>
        @using (Html.BeginForm("DangKy", "User"))
        {
            @Html.ValidationSummary(true)
            <div class="container">

                <div class="row">

                    <div class="col">
                        <!-- Section: Design Block -->
                        <section class="text-center" style="background-color: #9A616D;">
                            <!-- Background image -->
                            <div class="p-1 bg-image">
                                <img src="~/img/deer_minimalism_vector_background_nature_93845_1400x1050.jpg" height="300" width="800" />
                            </div>
                            <!-- Background image -->

                            <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
                                <div class="card-body py-5 px-md-5">

                                    <div class="row d-flex justify-content-center">
                                        <div class="col-lg-8">
                                            <h2 class="fw-bold mb-5">Đăng Ký Thành Viên</h2>
                                            <form>
                                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                                <div class="row">
                                                    <div class="col-md-6 mb-4">
                                                        <div class="form-outline">
                                                            <label class="form-label" for="HoTen">Họ tên:</label>
                                                            <input type="text" name="HoTen" required class="form-control " />
                                                            @ViewData["err1"]
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4">
                                                        <div class="form-outline">
                                                            <label class="form-label" for="TenDN">Tên đăng nhập:</label>
                                                            <input type="text" name="TenDN" required class="form-control " />
                                                            @ViewData["err2"]
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4">
                                                        <div class="form-outline">
                                                            <label class="form-label" for="MatKhau">Mật khẩu:</label>
                                                            <input type="password" name="MatKhau" required class="form-control " />
                                                            @ViewData["err3"]
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4">
                                                        <div class="form-outline">
                                                            <label class="form-label" for="MatKhauNL">Nhập lại mật khẩu:</label>
                                                            <input type="password" name="MatKhauNL" required class="form-control " />
                                                            @ViewData["err4"]
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4">
                                                        <div class="form-outline">
                                                            <label class="form-label" for="DienThoai">Số điện thoại:</label>
                                                            <input type="text" name="DienThoai" required class="form-control " />
                                                            @ViewData["err5"]
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4">
                                                        <div class="form-outline">
                                                            <label class="form-label" for="Ngaysinh">Ngày sinh:</label>
                                                            <input type="date" name="Ngaysinh" required class="form-control " />
                                                            @ViewData["err6"]
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- Email input -->
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="Email">Địa chỉ Email:</label>
                                                    <input type="email" name="Email" class="form-control" />

                                                </div>

                                                <!-- Password input -->
                                                <div class="form-outline mb-4">
                                                    <label class="form-label" for="DiaChi">Địa chỉ:</label>
                                                    <input type="text" name="DiaChi" class="form-control" />

                                                </div>

                                                <!-- Checkbox -->
                                                <!-- Submit button -->
                                                <div class="pt-1 mb-4">
                                                    <button class="btn btn-primary btn-lg btn-block" type="submit">Đăng Ký</button>
                                                </div>
                                                <!-- Register buttons -->

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <!-- Section: Design Block -->
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
