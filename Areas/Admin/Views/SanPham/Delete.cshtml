@model WebBanHoa.Models.SANPHAM
@{ ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }

    h3, h4 {
        color: red;
        font-weight: bold;
    }
</style>
<h2> XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3>Bạn quyết định xóa sản phẩm này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên SP:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>
        <dt>
            Mô Tả:
        </dt>
        <dd>
            @Html.Raw(@Model.MoTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
        </dd>
        <dt>
            Ảnh Bìa:
        </dt>
        <dd>
            <img src="~/img/sp/@Model.HinhMinhHoa" alt=" @Model.TenSP">
        </dd>
        <dt>
            Ngày Cập Nhật:
        </dt>
        <dd>
            @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}")
        </dd>
        <dt>
            Số Lượng Bán:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuongBan)
        </dd>
        <dt>
            Giá Bán:
        </dt>
        <dd>
            @Html.FormatValue(@Model.DonGia, "{0:#,##0}") VNĐ
        </dd>
        <dt>
            Phân Loại:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PHANLOAI.TenPL)
        </dd>
        <dt>
            Nhà Cung Cấp:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NHACUNGCAP.TenNCC)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div style="margin-left:300px" class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ SẢN PHẨM", "Index")
        </div>
    }
</div>
