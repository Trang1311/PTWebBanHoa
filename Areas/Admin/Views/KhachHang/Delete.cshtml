@model WebBanHoa.Models.KHACHHANG
@{ ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }

    h3, h4 {
        color: red;
        font-weight: bold;
    }
</style>
<h2> XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3>Bạn quyết định xóa khách hàng này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên KH:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HoTenKH)
        </dd>
        <dt>
            Địa Chỉ:
        </dt>
        <dd>
            @Html.Raw(@Model.DiaChiKH)
        </dd>
        <dt>
            Hình Ảnh:
        </dt>
        <dd>
            <img src="~/img/kh/@Model.HinhAnh" alt=" @Model.HoTenKH">
        </dd>
        <dt>
            Ngày Sinh:
        </dt>
        <dd>
            @Html.FormatValue(@Model.NgaySinh, "{0:dd/MM/yyyy}")
        </dd>
        <dt>
            SĐT:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DienThoaiKH)
        </dd>
        <dt>
            Email:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Tên ĐN:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenDN)
        </dd>
        <dt>
            Mật Khẩu:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div style="margin-left:300px" class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ KHÁCH HÀNG", "Index")
        </div>
    }
</div>
